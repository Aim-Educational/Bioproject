<UserControl x:Class="Maintainer.Controls.EditorTrackPicker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="75"/>
            <ColumnDefinition Width="196*"/>
            <ColumnDefinition Width="29*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Label Content="File:" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,2,0,3"/>
        <TextBox x:Name="path" HorizontalAlignment="Stretch" TextWrapping="Wrap" VerticalAlignment="Center" Grid.Row="0" Grid.Column="1" IsReadOnly="True" Margin="0,6,1,7"/>
        <Button Content="..." Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center" Width="21" Click="Button_Click"/>

    </Grid>
</UserControl>
